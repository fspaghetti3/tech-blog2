<h1>Latest Posts</h1>
<ul>
    {{#each posts}}
    <li>
        <h2>{{this.title}}</h2>
        <p>By: {{this.user.username}}</p>
        <p>{{this.content}}</p>

        <!-- Link to post details, where users can add comments -->
        <a href="/posts/{{this.id}}">View/Comment</a>
    </li>
    {{/each}}
</ul>